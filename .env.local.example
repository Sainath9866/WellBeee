# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret

# MongoDB Connection
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/wellbee?retryWrites=true&w=majority

# Google OAuth (for NextAuth)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# JWT Secret (for token authentication)
JWT_SECRET=your-jwt-secret

# Daily.co API Key (for video calls)
# Get your API key from https://dashboard.daily.co/
# This is optional - if not provided, the app will use Jitsi Meet as a fallback
DAILY_API_KEY=your-daily-api-key 